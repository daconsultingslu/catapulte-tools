{% extends 'admin/admin_base.html.twig' %}

{% form_theme form 'bootstrap_4_layout.html.twig' %}

{% block body %}
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2">{{ tool.name }}</h1>
    </div>

    <div class="pt-3 pb-2 mb-3 col-12">
        <div class="question mb-4">
            <h3 class="mb-3">{{ qcmQuestion.name }}</h3>
            {{ form_start(form, {attr: {class: 'form--qcm-tool'}}) }}

            {{ form_widget(form) }}
            <button type="submit" class="btn btn-primary my-1 btn--submit">Valider</button>

            {% if qcmQuestion.canBeSkipped %}
                <a href="{{ path('qcm_tool_skip_question', {'event': event.id, 'tool': tool.id, 'qcmQuestion': qcmQuestion.id}) }}" class="btn btn-secondary my-1 btn--submit">Passer Ã  la question suivante</a>
            {% endif %}
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const timeInput = $('#qcm_time');
            let seconds = 00; 
            let millis = 00; 
            const startTimer = () => {
                millis++; 
                
                if (millis > 99) {
                    seconds++;
                    millis = 0;
                }
                
                timeInput.val(seconds * 100 + millis);
            }

            let interval;

            clearInterval(interval);
            interval = setInterval(startTimer, 10);
        });
    </script>
{% endblock %}
